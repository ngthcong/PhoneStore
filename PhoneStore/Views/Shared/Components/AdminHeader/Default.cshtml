
@{
    Layout = null;
}
@model PhoneStore.Data.Account

@if (Model != null)
{
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href=" @Url.Action("Index","Admin")" class="nav-link">Trang chủ</a>
            </li>
          
        </ul>


        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">


            <li class="nav-item dropdown user-menu">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">

                   
                    <span class="d-none d-md-inline">@Model.AccName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <!-- User image -->
                    <li class="user-header bg-primary">
                        <p>
                            @Model.AccName
                        </p>
                    </li>

                    <!-- Menu Footer-->
                    <li class="user-footer justify-content-center">
                        @*<a href="@Url.Action("Profile","")" class="btn btn-default btn-flat">Profile</a>*@
                        <a href="@Url.Action("Logout","Admin")" class="btn btn-default btn-flat float-right">Sign out</a>
                    </li>
                </ul>
            </li>

        </ul>
    </nav>
}

