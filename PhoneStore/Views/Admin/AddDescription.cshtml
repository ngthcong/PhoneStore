
@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@section css{

    <link href="~/plugins/summernote/summernote-bs4.css" rel="stylesheet" />
}

@model  ProtNameViewModel

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Text Editors</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Text Editors</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <h3 class="card-title">
                            
                            Mô tả cho sản phẩm @Model.proName
                        </h3>
                        <!-- tools box -->
                        <!-- /. tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body pad">
                        <div class="mb-3">
                            <textarea id="text-editor" class="textarea" placeholder="Place some text here"
                                      style="width: 100%; height: 1000px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                        </div>
                        
                    </div>
                    <div class="card-footer">
                        <input hidden id="proid" value="@Model.proId" />
                        <button id="upload"  class="btn btn-info float-right">Lưu bài viết</button>
                    </div>
                </div>
            </div>
            <!-- /.col-->
        </div>
        <!-- ./row -->
    </section>
    <!-- /.content -->
</div>

@section scripts{

    
    <script src="~/plugins/summernote/summernote-bs4.js"></script>
    <script src="~/js/product/adddescription.js"></script>
}