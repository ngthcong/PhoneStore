
@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}


@section css{ }
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">


            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">


                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Báo cáo</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->

                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="callout callout-danger">
                                        <div class="row">

                                            <div class="col-md-8">
                                                <h5>Báo cáo hoá đơn tháng</h5>

                                                <select id="month-select" class="form-control w-50">

                                                    <option value="1">Tháng này</option>
                                                    <option value="2">Tháng trước</option>

                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="clearfix">
                                                    <button id="invoiceReport" class="btn float-right  btn-primary btn-lg">Tải xuống</button>
                                                </div>
                                            </div>

                                        </div>





                                    </div>

                                </div>
                                <div class="col-md-4">
                                    <div class="callout callout-danger">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <h5>Báo cáo sản phẩm</h5>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="clearfix">
                                                    <button id="productReport" class="btn float-right  btn-primary btn-lg">Tải xuống</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>


                        </div>
                        <!-- /.card-body -->



                    </div>

                </div>

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section scripts{



    <script src="~/js/report.js"></script>
}