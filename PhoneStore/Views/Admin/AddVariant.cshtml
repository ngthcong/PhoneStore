
@{
    ViewData["Title"] = "AddVariant";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@model ProtNameViewModel

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>General Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">

                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Thêm màu sản phẩm: @Model.proName</h3>
                        </div>
                        <form id="addvariant" enctype="multipart/form-data">
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Tên màu</label>
                                            <input type="text" class="form-control" id="color" name="color" placeholder="">
                                        </div>
                                    </div>

                                    <div class="col-sm-8">
                                        <div class="form-group">
                                            <label for="customFile">Icon màu</label>
                                            <div class="custom-file">
                                                <input type="file" class="form-control-file border" id="colorIcon" name="proColorIcon" accept="image/*">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="customFile">Hình mô tả</label>

                                            <div class="custom-file">
                                                <input type="file" class="form-control-file border" name="proColorImage" id="colorImage" accept="image/*" multiple />

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Số lượng</label>
                                            <input type="number" class="form-control" id="proQty" name="proQty">
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <!-- select -->
                                        <div class="form-group">
                                            <label>Trạng thái</label>
                                            <select id="proStatus" name="proStatus" class="form-control">
                                                <option value="True">Hoạt động</option>
                                                <option value="False">Ẩn</option>

                                            </select>
                                        </div>
                                    </div>

                                </div>
                                <input type="text" hidden value="@Model.proId" id="proId" name="proId" />
                                <input type="text" hidden value="@Model.proName" id="proName" name="proName" />
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-default ">Huỷ</button>
                                <button type="submit" class="btn btn-info float-right">Thêm</button>
                            </div>
                        </form>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section scripts{
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/js/product/addvariant.js"></script>
}
