
@{
    ViewData["Title"] = "InvoiceDetail";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@section css{

}
@using PhoneStore.Data

@model Invoice

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thông tin đơn hàng</h1>
                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">

                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form">
                            <div class="card-body">
                                <div class="row">

                                    <div class="col-md-12">

                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="callout callout-danger">
                                                    <div class="row">

                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="exampleInputEmail1">Tên khách hàng</label>
                                                                <input type="text" class="form-control" id="exampleInputEmail1" value="@Model.InvCusName" placeholder="">
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="exampleInputEmail1">Số điện thoại</label>
                                                                <input type="text" class="form-control" id="exampleInputEmail1" value="@Model.InvCusPhone" placeholder="">
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="exampleInputEmail1">Email</label>
                                                                <input type="text" class="form-control" id="exampleInputEmail1" value="@Model.InvCusEmail" placeholder="">
                                                            </div>
                                                        </div>



                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label>Thành phố</label>
                                                                <select id="pbrand" name="proBrandId" class="form-control">

                                                                    <option value="1">Apple</option>
                                                                    <option value="2">Samsung</option>
                                                                    <option value="3">OPPO</option>
                                                                    <option value="4">Vsmart</option>
                                                                    <option value="5">Xiaomi</option>
                                                                    <option value="6">Realme</option>
                                                                    <option value="7">Vivo</option>
                                                                    <option value="8">Nokia</option>
                                                                    <option value="9">Huawei</option>

                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label>Quận huyện</label>
                                                                <select id="pbrand" name="proBrandId" class="form-control">
                                                                    <option value="" disabled selected hidden></option>
                                                                    <option value="1">Apple</option>
                                                                    <option value="2">Samsung</option>
                                                                    <option value="3">OPPO</option>
                                                                    <option value="4">Vsmart</option>
                                                                    <option value="5">Xiaomi</option>
                                                                    <option value="6">Realme</option>
                                                                    <option value="7">Vivo</option>
                                                                    <option value="8">Nokia</option>
                                                                    <option value="9">Huawei</option>

                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label>Phường xã</label>
                                                                <select id="pbrand" name="proBrandId" class="form-control">
                                                                    <option value="" disabled selected hidden></option>
                                                                    <option value="1">Apple</option>
                                                                    <option value="2">Samsung</option>
                                                                    <option value="3">OPPO</option>
                                                                    <option value="4">Vsmart</option>
                                                                    <option value="5">Xiaomi</option>
                                                                    <option value="6">Realme</option>
                                                                    <option value="7">Vivo</option>
                                                                    <option value="8">Nokia</option>
                                                                    <option value="9">Huawei</option>

                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="col-sm-12">
                                                            <div class="form-group">
                                                                <label for="exampleInputEmail1">Số nhà và tên đường</label>
                                                                <input type="text" class="form-control" id="exampleInputEmail1" value="@Model.InvAddress" placeholder="">
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-7">
                                                <div class="callout callout-danger">
                                                    <div class="row">

                                                        <div class="col-md-12">
                                                            <div class="card">
                                                                <div class="card-header">
                                                                    <h3 class="card-title">Sản phẩm</h3>
                                                                </div>
                                                                <!-- /.card-header -->
                                                                <div class="card-body p-0">
                                                                    <table class="table">
                                                                        <thead>
                                                                            <tr>
                                                                                <th style="width: 10px">#</th>
                                                                                <th>Tên sản phẩm</th>
                                                                                <th>Màu</th>
                                                                                <th>Giá thành</th>
                                                                                <th>Giá khuyến mãi</th>
                                                                                <th>Số lượng</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>

                                                                            @{
                                                                                int i = 1;
                                                                                foreach (InvoiceDetail item in Model.InvoiceDetail)
                                                                                {
                                                                                    <tr>
                                                                                        <td>@i</td>
                                                                                        <td>@item.Pro.ProName</td>
                                                                                        <td>@item.Var.VarColor</td>
                                                                                        <td>@item.Pro.ProRetailPrice</td>
                                                                                        <td>@item.Pro.ProSalePrice</td>
                                                                                        <td>@item.ProQty</td>
                                                                                    </tr>
                                                                                }

                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                                <!-- /.card-body -->
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-warning">Huỷ đơn hàng</button>
                                <button type="submit" class="btn btn-info float-right">Duyệt đơn đơn</button>
                            </div>
                            <!-- /.card-body -->


                        </form>
                    </div>
                    <!-- /.card -->
                    <!-- /.card -->
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section scripts{


}
