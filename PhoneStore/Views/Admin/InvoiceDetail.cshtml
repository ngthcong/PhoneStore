
@{
    ViewData["Title"] = "InvoiceDetail";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

@section css{

}
@using PhoneStore.Models.ViewModel.InvoiceModel
@using PhoneStore.Data
@using PhoneStore.CustomHandler
@model InvoiceDetailViewModel


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thông tin đơn hàng</h1>
                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">

                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form id="form" enctype="multipart/form-data">
                            <div class="card-body">
                                <div class="row">

                                    <div class="col-md-12">

                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="callout callout-danger">
                                                    <div class="row">
                                                        <input hidden id="InvId" name="InvId" value="@Model.Invoice.InvId">
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="exampleInputEmail1">Tên khách hàng</label>
                                                                <input type="text" class="form-control" id="InvCusName" name="InvCusName" value="@Model.Invoice.InvCusName" placeholder="">
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="exampleInputEmail1">Số điện thoại</label>
                                                                <input type="text" class="form-control" id="InvCusPhone" name="InvCusPhone" value="@Model.Invoice.InvCusPhone" placeholder="">
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="exampleInputEmail1">Email</label>
                                                                <input type="text" class="form-control" id="InvCusEmail" name="InvCusEmail" value="@Model.Invoice.InvCusEmail" placeholder="">
                                                            </div>
                                                        </div>



                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label>Thành phố</label>




                                                                <select id="cities" name="InvCityId" class="form-control">


                                                                    @if (Model.Invoice.InvWard != null)
                                                                    {
                                                                        foreach (var item in Model.Cities)
                                                                        {
                                                                            if (Model.Invoice.InvWard.District.City.CityId == item.CityId)
                                                                            {
                                                                                <option selected value="@item.CityId">@item.CityName</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="@item.CityId">@item.CityName</option>
                                                                            }
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="" disabled selected hidden></option>
                                                                        foreach (var item in Model.Cities)
                                                                        {
                                                                            <option value="@item.CityId">@item.CityName</option>
                                                                        }
                                                                    }


                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label>Quận huyện</label>
                                                                <select id="district" name="InvDistrictId" class="form-control" @if (Model.Invoice.InvWard == null) { @: disabled="disabled"
                                                                        }>
                                                                    @if (Model.Invoice.InvWard != null)
                                                                    {
                                                                        foreach (var item in Model.AddressDistricts.Where(x => x.CityId == Model.Invoice.InvWard.District.City.CityId))
                                                                        {
                                                                            if (Model.Invoice.InvWard.District.DistrictId == item.DistrictId)
                                                                            {
                                                                                <option selected value="@item.DistrictId">@item.DistrictName</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="@item.DistrictId">@item.DistrictName</option>
                                                                            }
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="" disabled selected hidden></option>

                                                                    }

                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label>Phường xã</label>
                                                                <select id="ward" name="InvWardId" class="form-control" @if (Model.Invoice.InvWard == null) { @: disabled="disabled"
                                                                        }>

                                                                    @if (Model.Invoice.InvWard != null)
                                                                    {
                                                                        foreach (var item in Model.AddressWards.Where(x => x.District.City.CityId == Model.Invoice.InvWard.District.City.CityId))
                                                                        {
                                                                            if (Model.Invoice.InvWard.WardId == item.WardId)
                                                                            {
                                                                                <option selected value="@item.WardId">@item.WardName</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="@item.WardId">@item.WardName</option>
                                                                            }
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="" disabled selected hidden></option>

                                                                    }
                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="exampleInputEmail1">Số nhà và tên đường</label>
                                                                <input type="text" class="form-control" id="InvAddress" name="InvAddress" value="@Model.Invoice.InvAddress" placeholder="">
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label for="exampleInputEmail1">Tình trạng</label>
                                                                <select id="InvStatus" name="InvStatus" class="form-control">

                                                                    @if (Model.Invoice.InvStatus == null)
                                                                    {
                                                                        <option selected value="NULL">Đang chờ duyệt</option>
                                                                        <option value="False">Huỷ</option>
                                                                        <option  value="True">Đã duyệt</option>
                                                                    }
                                                                    else if (Model.Invoice.InvStatus.Value == false)
                                                                    {
                                                                        <option value="NULL">Đang chờ duyệt</option>
                                                                        <option selected value="False">Huỷ</option>
                                                                        <option value="True">Đã duyệt</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option  value="NULL">Đang chờ duyệt</option>
                                                                        <option value="False">Huỷ</option>
                                                                        <option selected value="True">Đã duyệt</option>
                                                                    }

                                                                </select>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-7">
                                                <div class="callout callout-danger">
                                                    <div class="row">

                                                        <div class="col-md-12">
                                                            <div class="card">
                                                                <div class="card-header">
                                                                    <h3 class="card-title">Sản phẩm</h3>
                                                                </div>
                                                                <!-- /.card-header -->
                                                                <div class="card-body p-0">
                                                                    <table class="table">
                                                                        <thead>
                                                                            <tr>
                                                                                <th style="width: 10px">#</th>
                                                                                <th>Tên sản phẩm</th>
                                                                                <th>Màu</th>
                                                                                <th>Giá thành</th>
                                                                                <th>Giá khuyến mãi</th>
                                                                                <th>Số lượng</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>

                                                                            @{
                                                                                int i = 1;
                                                                                foreach (InvoiceDetail item in Model.Invoice.InvoiceDetail)
                                                                                {
                                                                                    <tr>
                                                                                        <td>@i</td>
                                                                                        <td>@item.Pro.ProName</td>
                                                                                        <td>@item.Var.VarColor</td>
                                                                                        <td>@Currency.CurrencyFormat(item.Pro.ProRetailPrice) </td>
                                                                                        <td>@Currency.CurrencyFormat(item.Pro.ProSalePrice)</td>
                                                                                        <td>@item.ProQty</td>
                                                                                       
                                                                                    </tr>
                                                                                     i++; 
                                                                                }

                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                                <!-- /.card-body -->
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                            <button type="submit" class="btn btn-info float-right">Lưu</button>
                            </div>
                            <!-- /.card-body -->


                        </form>
                    </div>
                    <!-- /.card -->
                    <!-- /.card -->
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>

@section scripts{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/js/invoice/invoice.js"></script>

}
