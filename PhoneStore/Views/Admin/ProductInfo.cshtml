
@{
    ViewData["Title"] = "ProductInfo";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
@section css{ }
@using PhoneStore.Data
@model Product
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thông tin sản phẩm</h1>
                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">

                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form id="form">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <div class="callout callout-danger">
                                            <div class="product-picture">
                                                <img src="~/@Model.ProImage" class="w-100" alt="">
                                            </div>
                                        </div>
                                        <!-- /.card -->
                                    </div>
                                    <div class="col-md-10">
                                        <input hidden  name="ProId" value="@Model.ProId" >
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Tên sản phẩm</label>
                                                    <input type="text" class="form-control" id="proName" name="ProName" value="@Model.ProName" placeholder="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Giá bán lẻ</label>
                                                    <input type="number" class="form-control" id="proRetailPrice" name="ProRetailPrice" value="@Model.ProRetailPrice" placeholder="">
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Giá khuyến mãi</label>
                                                    <input type="number" class="form-control" id="ProSalePrice" name="ProSalePrice" value="@Model.ProSalePrice" placeholder="">
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Tình trạng</label>
                                                    <select id="ProStatus" name="ProStatus" class="form-control">
                                                        @if (Model.ProStatus.Value)
                                                        {
                                                            <option value="true" selected>Đang bán</option>
                                                            <option value="false">Ngừng bán</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="true" selected>Đang bán</option>
                                                            <option value="false" selected>Ngừng bán</option>
                                                        }



                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <a href="@Url.Action("productspec","Admin",new {pid = Model.ProId })" class="btn btn-outline-primary mt-3">Thông tin kỹ thuật</a>
                                                <a href="@Url.Action("adddescription","Admin",new {pid = Model.ProId })" class="btn btn-outline-primary mt-3">Thông tin mô tả</a>
                                            </div>
                                          
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info float-right">Lưu chỉnh sửa</button>

                            </div>


                        </form>
                    </div>
                    <!-- /.card -->
                    <div class="card card-success p-div">
                        <div class="card-header">
                            <h3 class="card-title">Phiên bản sản phẩm</h3>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                @foreach (var item in Model.ProVariant)
                                {
                                    <div class="col-md-3 col-6">
                                        <div class="callout callout-danger">
                                            <div class="row">
                                                <div class="col-md-5 ">

                                                    <div class="product-picture">
                                                        <img src="~/@item.VarColorIcon" class="w-100" alt="">
                                                    </div>
                                                </div>
                                                <div class="col-md-7">
                                                    <p class="">Màu: @item.VarColor</p>
                                                    <a href="@Url.Action("variantInfo","admin",new {vid = item.VarId })" class="btn btn-outline-primary">Chỉnh sửa</a>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }





                            </div>

                        </div>
                        <div class="card-footer">


                            <a href="@Url.Action("Addvariant","Admin",new { pid = Model.ProId })" class="btn btn-info">Thêm phiên bản</a>
                        </div>

                        <!-- /.card-body -->
                    </div>


                    <!-- /.card -->
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>
@section scripts{

    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation/additional-methods.min.js"></script>
    
    <script src="~/js/product/productinfo.js"></script>
}