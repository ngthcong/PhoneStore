
@{
    ViewData["Title"] = "AccountInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PhoneStore.Models.ViewModel.User
@using PhoneStore.Data
@model AccountViewModel
@{
    Account account = Model.Account;
    ICollection<AddressCity> addressCity = Model.AddressCity;
    ICollection<AddressDistrict> addressDistrict = Model.AddressDistrict;
    ICollection<AddressWard> addressWard = Model.AddressWard;
}

@section css {
    <link href="~/styles/contact.css" rel="stylesheet" />
    <link href="~/styles/contact_responsive.css" rel="stylesheet" />
}
<div class="contact" style="margin-top: 60px;">
    <div class="container">
        <div class="row">
            <!-- Get in touch -->
            <div class="col-lg-12 contact_col">
                <div>
                    <div class="get_in_touch">
                        <div class="section_title">Thông tin tài khoản</div>

                        <div class="contact_form_container">
                            <form id="form" enctype="multipart/form-data">
                                <div class="contact_form">
                                    <div class="row">
                                        <div class="col-xl-6 input-group1">
                                            <!-- Name -->
                                            <label for="contact_name">Họ và tên</label>
                                            <input type="text" id="AccName" name="AccName" value="@account.AccName" class="contact_input">
                                        </div>
                                        <div class="col-xl-6 input-group1">
                                            <!-- Last Name -->
                                            <label for="contact_last_name">Số điện thoại</label>
                                            <input type="text" id="AccPhone" name="AccPhone" value="@account.AccPhone" class="contact_input">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-6  input-group1">
                                            <!-- Last Name -->
                                            <label for="contact_last_name">Email</label>
                                            <input type="email" id="AccEmail" name="AccEmail" value="@account.AccEmail" class="contact_input">
                                        </div>
                                        <div class="col-xl-6 input-group1">
                                            <!-- Name -->
                                            <label for="contact_name">Tỉnh/ Thành phố*</label>
                                            <select id="cities" name="AccCityId" class="contact_input">


                                                @if (account.AccWard != null)
                                                {
                                                    foreach (var item in addressCity)
                                                    {
                                                        if (account.AccWard.District.City.CityId == item.CityId)
                                                        {
                                                            <option selected value="@item.CityId">@item.CityName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.CityId">@item.CityName</option>
                                                        }
                                                    }
                                                }
                                                else
                                                {
                                                    <option value="" disabled selected hidden></option>
                                                    foreach (var item in addressCity)
                                                    {
                                                        <option value="@item.CityId">@item.CityName</option>
                                                    }
                                                }


                                            </select>
                                        </div>


                                    </div>
                                    <div class="row">
                                        <div class="col-xl-6 input-group1">
                                            <!-- Last Name -->
                                            <label for="contact_last_name">Quận/ Huyện</label>
                                            <select id="district" name="AccDistrictId" class="contact_input" @if (account.AccWard == null) { @: disabled="disabled"
                                                    }>
                                                @if (account.AccWard != null)
                                                {
                                                    foreach (var item in addressDistrict.Where(x => x.CityId == account.AccWard.District.City.CityId))
                                                    {
                                                        if (account.AccWard.District.DistrictId == item.DistrictId)
                                                        {
                                                            <option selected value="@item.DistrictId">@item.DistrictName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.DistrictId">@item.DistrictName</option>
                                                        }
                                                    }
                                                }
                                                else
                                                {
                                                    <option value="" disabled selected hidden></option>

                                                }

                                            </select>
                                        </div>
                                        <div class="col-xl-6 input-group1">
                                            <!-- Name -->
                                            <label for="contact_name">Phường/ Xã</label>
                                            <select id="ward" name="AccWardId" class="contact_input" @if (account.AccWard == null) { @: disabled="disabled"
                                                    }>

                                                @if (account.AccWard != null)
                                                {
                                                    foreach (var item in addressWard.Where(x => x.District.City.CityId == account.AccWard.District.City.CityId))
                                                    {
                                                        if (account.AccWard.WardId == item.WardId)
                                                        {
                                                            <option selected value="@item.WardId">@item.WardName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.WardId">@item.WardName</option>
                                                        }
                                                    }
                                                }
                                                else
                                                {
                                                    <option value="" disabled selected hidden></option>

                                                }
                                            </select>
                                        </div>

                                    </div>
                                    <div class="row">

                                        <div class="col-xl-12 input-group1">
                                            <!-- Name -->
                                            <label for="contact_name">Số nhà và đường</label>
                                            <input type="text" id="AccAddress" name="AccAddress" value="@account.AccAddress" class="contact_input">
                                        </div>

                                    </div>
                                    <div class="row row_button justify-content-center">
                                        <div class="col-lg-5">
                                            <button type="submit" style=" height: 60px; font-size: 15px; text-transform:uppercase;width:100%" >
                                                <strong>Lưu thông tin</strong>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
                <div style="margin-top:30px">
                    <div class="get_in_touch">
                        <div class="section_title">Đơn hàng</div>

                        <div class="contact_form_container">
                            @if (account.InvoiceCus.Count != 0)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Mã đơn</th>
                                            <th scope="col">Ngày tạo</th>
                                            <th scope="col">Tình trạng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Invoice item in account.InvoiceCus)
                                        {
                                        <tr>

                                            <td>@item.InvId</td>
                                            <td>@item.DateCreated.Value.ToString("dd-MM-yyyy hh:mm")</td>
                                            @if (item.InvStatus == null)
                                            {
                                                <td>Đang chờ duyệt</td>

                                            }
                                            else if (!item.InvStatus.Value)
                                            {
                                                <td>Đã huỷ</td>
                                            }
                                            else
                                            {
                                                <td>Đã duyệt</td>
                                            }

                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="continue_shopping">
                                    <i class="fa fa-shopping-cart"></i>
                                    <h3>Bạn chưa mua sản phẩm nào cả</h3>
                                    <div class="button checkout_button w-25 m-auto">
                                        <a href="@Url.Action("index","home")">
                                            <strong>Quay lại trang chủ</strong>
                                        </a>

                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>


            <!-- Contact Info -->

        </div>

    </div>
</div>

@section scripts{
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/js/contact.js"></script>
    <script src="~/js/account.js"></script>
}

